<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#005005"
    tools:context=".MainActivity">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_weight="1"
      android:id="@+id/linear_text">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="#eeeeee"
        android:textSize="30sp"
        android:fontFamily="sans-serif-black"
        android:text="Team A"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/teama_text_view"
        android:textColor="#eeeeee"
        android:text="0"
        android:textSize="60sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:background="#870000"
        android:layout_margin="8dp"
        android:gravity="center"
        android:onClick="pointa_one"
        android:text="+3 POINTS"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#870000"
        android:layout_margin="8dp"
        android:onClick="pointa_two"
        android:gravity="center"
        android:text="+2 POINTS"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#870000"
        android:layout_margin="8dp"
        android:onClick="freea"
        android:layout_marginTop="12dp"
        android:text="FREE THROWS"/>
  </LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_weight="1"
      android:layout_toRightOf="@+id/linear_text">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="#eeeeee"
        android:fontFamily="sans-serif-black"
        android:text="Team B"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#eeeeee"
        android:layout_gravity="center"
        android:id="@+id/teamb_text_view"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textSize="60sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:background="#64b5f6"
        android:onClick="pointb_one"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:text="+3 POINTS"/>
    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:background="#64b5f6"
        android:onClick="pointb_two"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:text="+2 POINTS"/>
    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:background="#64b5f6"
        android:onClick="freeb"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:text="FREE THROWS"/>
  </LinearLayout>
  </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#006064"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:onClick="finish"
        android:text="FINISH"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/result_text_view"
      android:padding="15dp"
      android:textColor="#e3f2fd"
      android:textSize="34sp"
      android:text=""/>



</LinearLayout>